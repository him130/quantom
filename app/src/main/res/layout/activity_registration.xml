<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raysapp.quantom.RegistrationActivity"
    android:background="@color/black">

    <TextView

        android:layout_marginLeft="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_above="@id/message"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message"
        android:layout_above="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginRight="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="Sign in to discover amazing device near
        around you"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:id="@+id/card"
        android:textAlignment="viewStart"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_40sdp">
        <LinearLayout
            android:paddingTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_26sdp"
                android:layout_marginRight="@dimen/_26sdp"
                android:background="@drawable/corner_edittext"
                android:layout_gravity="center"
                android:hint="Name"
                android:inputType="text"
                android:autofillHints=""
                android:textColor="@color/black"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/username"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_26sdp"
                android:layout_marginRight="@dimen/_26sdp"
                android:background="@drawable/corner_edittext"
                android:layout_gravity="center"
                android:hint="Email or mobile number"
                android:inputType="textEmailAddress"
                android:autofillHints=""
                android:textColor="@color/black"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/password"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_26sdp"
                android:layout_marginRight="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/corner_edittext"
                android:layout_gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:autofillHints=""
                android:textColor="@color/black"
                android:maxLines="1"
                android:textColorHint="@color/black"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatButton
                android:text="Sign Up"
                android:onClick="signup"
                android:id="@+id/signup"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/bg_background_product"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_22sdp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>