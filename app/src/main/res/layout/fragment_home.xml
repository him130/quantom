<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raysapp.quantom.ui.home.HomeFragment"
    android:background="@color/black">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cloths"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_440sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/couple" />
            <LinearLayout
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_140sdp"
                    android:background="@drawable/main_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_backword" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_9sdp"
                        android:layout_weight="0.3"
                        android:id="@+id/women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hamlet_cicero_12"
                        android:onClick="women"
                        android:text="W O M E N"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/women"
                    android:layout_alignBottom="@+id/cloths"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="273dp"
                    android:text="Coming Soon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_270sdp"
                android:orientation="horizontal"
                android:background="@drawable/main_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/men"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_9sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hamlet_cicero_12"
                    android:onClick="men"
                    android:text="M E N"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forward" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:layout_below="@id/cloths"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/autohead" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_125sdp"
                android:layout_below="@id/cloths"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_65sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_51sdp"
                    android:fontFamily="@font/hamlet_cicero_12"
                    android:text="A U T O M O B I L E"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:fontFamily="@font/hamlet_cicero_12"
                    android:text="P A R T S"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_90sdp"
                    android:text="Coming Soon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="italic" />


            </LinearLayout>


        </RelativeLayout>



    </ScrollView>
</RelativeLayout>