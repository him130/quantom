<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raysapp.quantom.CustomizeActivity"
    android:background="@color/black">

    <com.adrianotelesc.expandablesearchbar.ExpandableSearchBar
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/search"
        android:alpha="0.4"
        app:hint="Search"
        app:hintColor="#202020"
        app:isRounded="true"/>

    <ScrollView
        android:layout_below="@id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:layout_below="@id/search"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:elevation="8dp"
                app:cardBackgroundColor="#0E0E0E"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shoulder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="5dp"
                        android:text="SHOULDER  :  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/shoulderedit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_29sdp"
                        android:background="@drawable/bg_customize"
                        android:hint="Shoulder"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_94sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="CHEST  :  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/chestedit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_59sdp"
                        android:background="@drawable/bg_customize"
                        android:hint="Chest"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_113sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/waist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="WAIST  :  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/waistedit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:background="@drawable/bg_customize"
                        android:hint="Neck"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_118sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="HIP  :  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/hipedit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_78sdp"
                        android:background="@drawable/bg_customize"
                        android:hint="HIP"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_128sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sleevelength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="SLEEVE LENGTH  :  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/sleevelengthedit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/bg_customize"
                        android:hint="Sleeve Length"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_67sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="LENGTH  :  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/lengthedit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_49sdp"
                        android:background="@drawable/bg_customize"
                        android:hint="Length"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_111sdp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:background="@drawable/bg_customize"
                    android:text="Submit"
                    android:textColor="#CAC5C5" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>





</RelativeLayout>